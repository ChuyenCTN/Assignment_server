<table class="table table-hover">
    <thead>
        <tr>
            <th style="width: 0.1%" scope="col"></th>
            <th style="width: 30%" scope="col">Name</th>
            <th style="width: 5%" scope="col">Image</th>

            <th style="width: 5%" scope="col">Categories</th>
            <th style="width: 8%" scope="col">Price (đ)</th>
            <th style="width: 33%" scope="col">Detall</th>
            <th style="width: 5%" scope="col"></th>
            <th style="width: 5%" scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <th scope="row"></th>
            <td><a style="margin-left: 1%">{{this.name}}</a></td>
            <td><img src="{{this.image}}" width="100" class="img-thumbnail"> </td>
            <td><a style="margin-left: 1%">{{this.cate_id}}</a></td>
            <td><a style="margin-left: 1%">{{this.price}}</a></td>
            <td><a style="margin-left: 1%">{{this.detall}}</a>
            </td>
            <td><a class="btn btn-secondary btn-sm" role="button" aria-pressed="true"
                    href="./products/edit/{{this._id}}" style="color: cornsilk">Edit</a></td>
            <td><a  class="btn btn-danger btn-sm" role="button" aria-pressed="true" href="./products/remove"
                    style="color: cornsilk; margin-right: 1%">Delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
